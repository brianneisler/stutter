#!/usr/bin/env node

var program = require('commander');

program
.description('start local stutter server')
.parse(process.argv);

(function(options) {
  var startServer = require('../').commands.startServer;
  startServer(options)
    .then(function() {
      process.exit();
    })
    .catch(function() {
      process.exit(1);
    });
})(program);
