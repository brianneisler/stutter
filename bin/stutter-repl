#!/usr/bin/env node

var program = require('commander')

program
  .description('start stutter repl')
  .usage('[options] [file]')
  .arguments('[file]')
  .parse(process.argv)

(function(options) {
  var file = _.first(program.args)
  var repl = require('../').commands.repl
  repl(file, options)
    .then(() => {
      process.exit()
    })
    .catch(() => {
      process.exit(1)
    })
})(program)
