#!/usr/bin/env node

var program = require('commander');
var package = require('../package.json');

program
  .version(package.version)
  .command('parse', 'parse a stutter js file')
  .command('repl', 'start stutter repl')
  .command('run', 'run stutter js program', {isDefault: true})
  .command('start', 'start local stutter server')
  .command('stop', 'stop local stutter server')
  .parse(process.argv);
