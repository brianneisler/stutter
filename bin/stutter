#!/usr/bin/env node

var program = require('commander')
var _package = require('../package.json')

program
  .version(_package.version)
  .command('evaluate', 'evaluate an ast')
  .command('generate', 'generate a stutter file from ast')
  .command('parse', 'parse a stutter file to ast')
  .command('repl', 'start stutter repl')
  .command('run', 'run stutter program', { isDefault: true })
  .parse(process.argv)
