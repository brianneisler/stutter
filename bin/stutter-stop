var program = require('commander');

program
  .description('stop local stutter server')
  .option('-d, --daemon', 'Run as a daemon')
  .parse(process.argv);

(function(options) {
  var stopServer = require('../').commands.stopServer;
  stopServer(options)
    .then(function() {
      process.exit();
    })
    .catch(function() {
      process.exit(1);
    });
})(program);
